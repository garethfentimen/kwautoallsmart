<script type="text/javascript">

	window.form = (function() {
		var main = {};

		main.formHidden = true;
		main.formObject = $("#quote-request-form");

		main.toggleForm = function () {
			if (main.formHidden) {
				this.formObject.removeClass("hidden");
				this.formHidden = false;
			} else {
				this.formObject.addClass("hidden");
				this.formHidden = true;
			}
		}

		return main;
	})();

